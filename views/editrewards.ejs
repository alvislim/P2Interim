<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <%- include('./partials/head.ejs') %>
</head>

<body>

  <div class="row pb-5 pt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          Edit Rewards
        </h1>

        <%- include('./partials/messages.ejs') %>

        <form action="/rewardspage/<%= index %>/?_method=PUT" method="POST" id="myForm">
          <div class="form-group">
            <label for="rewardsType" class="forminput">Type Of Rewards</label>
            <input type="text" class="form-control" id="rewardsType" name="rewardsType" required="true"
              class="forminput" value="<%= result.rewardsType %>">


            <label for="rewardsAmount" class="forminput">Rewards Amount</label>
            <input type="number" class="form-control" id="rewardsAmount" required="true" min='1' name="rewardsAmount"
              class="forminput" value="<%= result.rewardsAmount %>">


            <label for="rewardsExpiry" class="forminput">Rewards Expiry Date</label>
            <input type="date" class="form-control" id="rewardsExpiry" name="rewardsExpiry" required="true"
              class="forminput">
            <label for="rewardsLocation" class="forminput">Where do to utilized rewards?</label>
            <input type="text" class="form-control" id="rewardsLocation" name="rewardsLocation" required="true"
              class="forminput" value="<%= result.rewardsLocation %>">
          </div>
          <div class="form-group">
          </div>
          <button class="btn btn-dark" type="submit" class="forminput" id="btn-submit">Submit</button>

          <a class="btn btn-dark back" href="/rewardspage">Back</a>

        </form>
      </div>
    </div>
  </div>

  <footer class="site-footer">
